<% provide(:title, 'Blog Posts') %>
<div class="container to_bottom">
    <h1>Blog Posts</h1>
    <%= link_to 'New Blog Post', new_blog_post_path, class: 'btn btn-primary' %>

    <table class="table table-striped mt-5 mb-5 align-middle">
    <tr>
        <th>Title</th>
        <th>Content</th>
        <th>User</th>
        <th colspan="3"></th>
    </tr>

    <% @blog_posts.each do |blog_post| %>
        <tr>
        <td><%= blog_post.title %></td>
        <td><%= truncate(blog_post.content, length: 150) %></td>
        <td>
            <% if blog_post.user %>
                <%= link_to blog_post.user.name, user_path(blog_post.user) %>
            <% else %>
                No User
            <% end %>
        </td>
        <td><%= link_to 'Show', blog_post, class: 'btn btn-dark' %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(blog_post), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Delete', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
    </table>
</div>