<%= form_with(model: blog_post, local: true) do |form| %>
  <% if blog_post.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <h2>The form contains <%= pluralize(blog_post.errors.count, "error") %></h2>

        <ul>
          <% blog_post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_post_title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :blog_post_content %>
  </div>

  <div class="field">
    <%= form.label :summary %>
    <%= form.text_field :summary, id: :blog_post_summary %>
  </div>

  <div class="field">
    <%= form.label :title_image_url %>
    <%= form.text_field :title_image_url, id: :blog_post_title_image_url %>
  </div>

  <div class="field">
    <%= form.label :tag_list %><br />
    <%= form.text_field :tag_list %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
