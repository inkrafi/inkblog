<% provide(:title, 'Users') %>
<div class="container to_bottom">
    <h1>All Users</h1>
    <%= link_to 'Blog Posts', blog_posts_path, class: 'btn btn-primary' %>

    <table class="table table-striped my-5 align-middle">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Total Post</th>
            <th colspan="3"></th>
        </tr>

        <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.blog_post.count %></td>
                <td><%= link_to 'Show', user, class: 'btn btn-dark' %></td>
                <td>
                    <% if current_user.admin? && !current_user?(user) %>
                        <%= link_to "Delete", user, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger' %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>
</div>