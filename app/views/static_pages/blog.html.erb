<% provide(:title, "Blog") %>
<!-- Page Header-->
<div class="px-4 px-lg-5">
    <div class="row">
        <div class="col-md-1 d-none d-md-block"> <!-- Tambahkan d-none d-md-block di sini -->
            <div class="post-container">
                <h5>Tags:</h5>
                <% @tags.each do |tag| %>
                    <div>
                        <u><%= link_to tag.name, tag_path(tag) %></u>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-11 col-sm-12"> <!-- Ubah menjadi full width pada mobile -->
            <div class="post-container">
                <div class="d-flex flex-wrap justify-content-center">
                    <% @blog_posts.each do |blog_post| %>
                    <div class="col-lg-3 mx-4">
                        <!-- Post preview-->
                        <div class="post-preview">
                            <a href="<%= post_path(blog_post) %>">
                                <h2 class="post-title fs-3"><%= truncate(blog_post.title, length: 35) %></h2>
                                <img src="<%= blog_post.title_image_url %>" alt="image" class="resize_img_thumb">
                                <h3 class="post-subtitle fs-4"><%= truncate(blog_post.content, length: 50) %></h3>
                            </a>
                            <p class="post-meta">
                                Posted by
                                <span class="text-dark"><%= blog_post.user.name if blog_post.user %></span>
                                <%= time_ago_in_words(blog_post.created_at) %> ago.
                            </p>
                        </div>
                    </div>
                    <% end %>
                </div>
                <%= paginate @blog_posts %>
            </div>
        </div>
    </div>
</div>