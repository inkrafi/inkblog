        var searchQuery = document.getElementById('q').value.trim();

        if (searchQuery === '') {
        alert('Search cannot be empty.');
        return false; // Pembatalan pengiriman formulir
        }

        return true; // Lanjutkan dengan pengiriman formulir
    }
</script>